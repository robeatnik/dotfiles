set from = "beatnikrobinson@outlook.com"

set realname = "sike"
set use_from = yes

set imap_user = ""
set imap_pass = ""

set folder = "imaps://imap.outlook.com"

set spoolfile = "+INBOX"
mailboxes = +INBOX
set postponed = "+[Gmail]/Drafts"

# 允许mutt自动创建一个新的imaps连接
unset imap_passive

# mutt自动连接保持时间
set imap_keepalive = 300

set sendmail = "/usr/bin/msmtp"

set header = no

set quit = ask-yes

set include

set indent_str = ">"

my_hdr From:beatnikrobinson@outlook.com

score "~N" +4





set sort_aux = date

set fast_reply

set resolve = yes

set charset = "utf-8"

# source ~/.mutt/mutt-colors-solarized/mutt-colors-solarized-dark-256.muttrc
set editor = "vim"

